      <listEntry value="1">@Strings.DataFieldBattery</listEntry>
      <listEntry value="2">@Strings.DataFieldCalories</listEntry>
      <listEntry value="3">@Strings.DataFieldActiveMinutes</listEntry>
      <listEntry value="4">@Strings.DataFieldHeartRate</listEntry>
      <listEntry value="5">@Strings.DataFieldMessages</listEntry>
      <listEntry value="6">@Strings.DataFieldFloorsUp</listEntry>
    </settingConfig>
  </setting>

</settings>
