  <label id="Date" x="center" y="31%" font="@Fonts.DateFont" justification="Graphics.TEXT_JUSTIFY_CENTER|Graphics.TEXT_JUSTIFY_VCENTER" color="Graphics.COLOR_WHITE" />
  <label id="Hours" x="49%" y="48%" font="@Fonts.HoursFont" justification="Graphics.TEXT_JUSTIFY_RIGHT|Graphics.TEXT_JUSTIFY_VCENTER" color="Graphics.COLOR_WHITE" />
  <label id="Minutes" x="52%" y="48%" font="@Fonts.MinutesFont" justification="Graphics.TEXT_JUSTIFY_LEFT|Graphics.TEXT_JUSTIFY_VCENTER" color="Graphics.COLOR_WHITE" />

  <drawable id="BottomDataField" class="BottomDataField" />
  <drawable id="LeftDataField" class="LeftDataField" />
  <drawable id="RightDataField" class="RightDataField" />

  <drawable id="SecondaryDataField1" class="SecondaryDataField">
    <param name="fieldId">3</param>
    <param name="offsetModifier">0</param>
    <param name="relativeXPos">0.168</param>
  </drawable>
  <drawable id="SecondaryDataField2" class="SecondaryDataField">
    <param name="fieldId">4</param>
    <param name="offsetModifier">0.5</param>
    <param name="relativeXPos">0.5</param>
  </drawable>
  <drawable id="SecondaryDataField3" class="SecondaryDataField">
    <param name="fieldId">5</param>
    <param name="offsetModifier">1</param>
    <param name="relativeXPos">0.832</param>
  </drawable>
</layout>